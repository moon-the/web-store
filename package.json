    "pactum": "^3.3.2",
    "passport-jwt": "^4.0.1",
    "qrcode": "^1.5.3",
    "redis": "^4.6.6",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "sequelize": "^6.28.0",
    "sequelize-cli": "^6.5.2",
    "sequelize-typescript": "^2.1.5",
    "sib-api-v3-sdk": "^8.5.0",
