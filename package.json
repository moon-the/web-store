    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/platform-socket.io": "^9.2.1",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/typeorm": "^9.0.1",
    "@nestjs/websockets": "^9.2.1",
    "bcrypt": "^5.1.0",
    "cache-manager": "^5.2.1",
    "cache-manager-redis": "^0.6.0",
    "cache-manager-redis-store": "^3.0.1",
